[alias]
	s = status -sb
	ll = log --color --graph --date=format:'%D - %H:%M:%S' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
	sh = show --pretty="" --name-only
    c = commit -a
    r = reset --hard HEAD
    db = branch -D
    cb = checkout -b
    sb = checkout
    ps = push
    pl = pull
    f = fetch

[color]
	ui = true

[commit]
	template = ~/.gitmessage

[core]
	editor = vim
	excludesfile = /home/mpg26/.cas-git-tools/etc/default-excludesfile
    pager = delta

[credential]
	helper = !aws codecommit credential-helper $@ --profile default
    UseHttpPath = true

[delta]
    navigate = true
    line-numbers = true
    side-by-side = true

[diff]
	tool = vimdiff
	renames = true
    colorMoved = default

[difftool "vimdiff"]
	cmd = "vimdiff \"$LOCAL\" \"$REMOTE\""
    prompt = false

[init]
	defaultBranch = master

[interactive]
    diffFilter = delta --color-only --features=interactive

[merge]
    conflictstyle = diff3

[user]
	name = Matthew Gerstemeier
	email = mgerstemeier@cas.org



; CAS SPECIFIC
[gerrit]
	createchangeid = true
[casgittools]
	gerritAlias = osd
	sshAlias = gerrit
	httpServer = osd-review.cas.org

